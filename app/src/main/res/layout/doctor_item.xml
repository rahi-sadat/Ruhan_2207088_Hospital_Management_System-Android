<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDocName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. John Doe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/tvDocSpec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiology"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:textColor="#7F8C8D"/>

            <TextView
                android:id="@+id/tvDocPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123456789"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:textColor="#34495E"/>

            <TextView
                android:id="@+id/tvDocSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule: Not set"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_marginTop="2dp"
                android:textColor="#2980B9"/>
        </LinearLayout>

        <ImageButton android:id="@+id/btnEditDoctor" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
        <ImageButton android:id="@+id/btnDeleteDoctor" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>